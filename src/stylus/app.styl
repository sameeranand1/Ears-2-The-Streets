@import 'common/*'

html
    height 100%

body
    background-color #EBEBEB
    display flex
    flex-direction column
    font-family: 'Roboto', sans-serif;
    margin 0
    min-height 100%
    min-width 320px

.Page
    // align-items center
    box-sizing border-box
    // display flex
    flex 1
    // justify-content center
    padding 25px 0

*
    margin 0
    outline 0 !important

*:focus
    outline 0 !important

a
    transition color ease-in-out .15s, box-shadow ease-in-out .15s, border-color ease-in-out .15s