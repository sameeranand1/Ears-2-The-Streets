/**
 * Form styling.
 */ 

.Input[type=text]
    background-color $BRAND_LIGHT_BLUE
    border none
    border-radius 4px
    box-sizing border-box
    color #777A80
    font-family inherit
    font-size 13px
    height 40px
    padding: 0 16px 0px 16px;

input[type=button], 
.Button
    background-color $BRAND_YELLOW
    border none
    border-radius 3px
    font-family inherit
    font-size 13px
    font-weight bold
    padding 12px 20px
    text-transform uppercase
    transition background-color .3s ease-out

input[type=button]:disabled, 
.Button:disabled
    background-color #D9D9D9
    color $WHITE
    cursor not-allowed

input[type=button]:hover, 
.Button:hover
    cursor pointer
    background-color darken($BRAND_YELLOW, 25%)

input[type=button]:hover:disabled, 
.Button:hover:disabled
    background-color darken(#D9D9D9, 1%)
    cursor not-allowed

.Button--dark
    background-color $BRAND_LIGHT_BLUE
    color $WHITE

.Button--dark:hover
    cursor pointer
    background-color darken($BRAND_LIGHT_BLUE, 25%)

input[type=button]::-moz-focus-inner
    border 0